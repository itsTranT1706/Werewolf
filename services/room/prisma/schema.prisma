// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Room {
  id             String   @id @default(cuid())
  code           String   @unique @db.Char(4) // 4-digit room code
  name           String   @db.VarChar(100)
  hostId         String?  // User ID của host (có thể là guest ID như "guest-xxxxx", logic đảm bảo luôn có giá trị)
  hostDisplayname   String   @db.VarChar(50)
  maxPlayers     Int      @default(75) // Increased from 20 to 75
  currentPlayers Int      @default(0)
  status         RoomStatus @default(WAITING)
  gameId         String?  // ID of the game when started
  settings       Json?    // Room settings (JSON)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  players RoomPlayer[]

  @@map("rooms")
}

model RoomPlayer {
  id        String   @id @default(cuid())
  roomId    String
  userId    String?  // Optional for anonymous players
  displayname  String   @db.VarChar(50)
  isHost    Boolean  @default(false)
  joinedAt  DateTime @default(now())

  room Room @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@map("room_players")
}

enum RoomStatus {
  WAITING
  STARTING
  IN_PROGRESS
  FINISHED
}
