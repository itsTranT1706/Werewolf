{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "traceId": { "type": "string" },
    "userId": { "type": "string" },
    "roomId": { "type": ["string", "null"] },
    "action": {
      "type": "object",
      "properties": {
        "type": { "type": "string" },
        "payload": { "type": "object" }
      },
      "required": ["type", "payload"],
      "additionalProperties": true
    },
    "ts": { "type": "number" }
  },
  "required": ["traceId", "userId", "action", "ts"],
  "additionalProperties": true
}
