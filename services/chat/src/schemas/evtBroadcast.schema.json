{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "traceId": { "type": "string" },
    "roomId": { "type": "string" },
    "targetUserId": { "type": "string" },
    "event": {
      "type": "object",
      "properties": {
        "type": { "type": "string" },
        "payload": { "type": "object" }
      },
      "required": ["type", "payload"],
      "additionalProperties": true
    },
    "ts": { "type": "number" }
  },
  "required": ["traceId", "event", "ts"],
  "anyOf": [
    { "required": ["roomId"] },
    { "required": ["targetUserId"] }
  ],
  "additionalProperties": true
}
