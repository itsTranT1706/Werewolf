{
    "proxy": {
        "auth-service": {
            "target": "http://auth-service:8081",
            "routes": [
                {
                    "path": "/register",
                    "method": "POST",
                    "targetPath": "/api/v1/auth/register",
                    "public": true
                },
                {
                    "path": "/login",
                    "method": "POST",
                    "targetPath": "/api/v1/auth/login",
                    "public": true
                },
                {
                    "path": "/api/v1/auth/*",
                    "method": "ALL",
                    "targetPath": "/api/v1/auth/*",
                    "public": true
                },
                {
                    "path": "/api/auth/*",
                    "method": "ALL",
                    "targetPath": "/api/v1/auth/*",
                    "public": true
                }
            ]
        }
    }
}